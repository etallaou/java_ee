<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>CreateCustomer</servlet-name>
        <servlet-class>com.etallaou.servlets.CreateCustomer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateOrder</servlet-name>
        <servlet-class>com.etallaou.servlets.CreateOrder</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReadCustomer</servlet-name>
        <servlet-class>com.etallaou.servlets.ReadCustomer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReadOrder</servlet-name>
        <servlet-class>com.etallaou.servlets.ReadOrder</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CreateCustomer</servlet-name>
        <url-pattern>/createCustomer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateOrder</servlet-name>
        <url-pattern>/createOrder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReadCustomer</servlet-name>
        <url-pattern>/readCustomer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReadOrder</servlet-name>
        <url-pattern>/readOrder</url-pattern>
    </servlet-mapping>
</web-app>